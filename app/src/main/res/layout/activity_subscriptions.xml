<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_subscriptions"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="70dp"
    tools:context="com.example.chirag.carparlour.subscriptions">

    <Button
        android:id="@+id/monthly"
        android:layout_width="178dp"
        android:layout_height="178dp"
        android:background="@android:color/holo_red_light"
        android:filterTouchesWhenObscured="true"
        android:textColor="@color/colorWhite"
        android:text="monthly"
        android:layout_marginRight="2dp"/>
    <Button
        android:id="@+id/quarterly"
        android:layout_width="178dp"
        android:layout_height="178dp"
        android:background="@android:color/holo_red_light"
        android:filterTouchesWhenObscured="true"
        android:textColor="@color/colorWhite"
        android:text="Quarterly"
        android:layout_toRightOf="@+id/monthly"
        />
    <Button
        android:id="@+id/half"
        android:layout_width="178dp"
        android:layout_height="178dp"
        android:background="@android:color/holo_red_light"
        android:filterTouchesWhenObscured="true"
        android:textColor="@color/colorWhite"
        android:text="Half yearly"
        android:layout_below="@+id/monthly"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp"
        />
    <Button
        android:id="@+id/yearly"
        android:layout_width="178dp"
        android:layout_height="178dp"
        android:background="@android:color/holo_red_light"
        android:filterTouchesWhenObscured="true"
        android:textColor="@color/colorWhite"
        android:text="yearly"
        android:layout_below="@+id/quarterly"
        android:layout_toRightOf="@+id/half"
        android:layout_marginTop="2dp"
        />

</RelativeLayout>
